// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_DB_URL")
}

model User {
  id    String     @id @default(uuid())
  email String  @unique
  name  String? @unique
  records Record[]
  tdee Int?
  password String
  @@index([email])
}

model Record {
  id        String     @id @default(uuid())
  foodName     String
  carb   Float
  protein   Float
  fat   Float
  intakeTime DateTime 
  createAt DateTime @default(now())
  updateAt DateTime
  name    User    @relation(fields: [userId], references: [id])
  userId  String
}