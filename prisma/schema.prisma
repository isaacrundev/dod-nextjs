generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url  	= env("SUPABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  tdee     Int?
  name     String?  @unique
  password String
  records  Record[]

  @@index([email])
}

model Record {
  id         String   @id @default(uuid())
  foodName   String
  carb       Float
  protein    Float
  fat        Float
  createAt   DateTime @default(now())
  updateAt   DateTime
  userId     String
  intakeTime DateTime
  name       User     @relation(fields: [userId], references: [id])
}
