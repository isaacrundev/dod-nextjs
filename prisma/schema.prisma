model Record {
  id         String   @id @default(uuid())
  foodName   String
  carbs       Int
  protein    Int
  fats        Int
  calories   Int
  createAt   DateTime @default(now())
  // updateAt   DateTime
  userId     String @unique
  // intakeTime DateTime
  user       User     @relation(fields: [userId], references: [id])
  foodSize Int
}
