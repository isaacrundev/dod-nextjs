generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url  	= env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  profile Profile?
  records  Record[]

  @@index([email])
}

model Profile {
  id       String   @id @default(uuid())
  userId String @unique
  user User @relation(fields: [userId],references: [id])
  tdee     Int?
  name     String? 

  @@index([id])
}

model Record {
  id         String   @id @default(uuid())
  foodName   String
  carb       Float
  protein    Float
  fat        Float
  calories   Float
  createAt   DateTime @default(now())
  updateAt   DateTime
  userId     String
  intakeTime DateTime
  name       User     @relation(fields: [userId], references: [id])
}
