generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url  	= env("SUPABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  // profile Profile?
  records  Record[]

  @@index([email])
}

