model Record {
  id         String   @id @default(uuid())
  foodName   String
  carbs       Float
  protein    Float
  fats        Float
  calories   Float
  foodSize   Float
  createAt   DateTime @default(now())
  // updateAt   DateTime?
  userId     String 
  intakeDate String @db.VarChar(10)
  user       User     @relation(fields: [userId], references: [id])
}
